{
  "name": "Localify",
  "description": "Redirect requests to local files",
  "author": "redphx",
  "version": "1.0.0",
  "manifest_version": 2,

  "web_accessible_resources": [
    "files/*"
  ],

  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "options_page": "options/index.html",

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "tabs",
    "<all_urls>"
  ]
}
